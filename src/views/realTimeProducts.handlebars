<div>
  <h2>Agregar Producto</h2>
  <form id="product-form">
    <label for="form-title">Título:</label>
    <input type="text" id="form-title" name="title" required><br>
    <label for="form-description">Descripción:</label>
    <input type="text" id="form-description" name="description" required><br>
    <label for="form-price">Precio:</label>
    <input type="number" id="form-price" name="price" min="0" required><br>
    <label for="form-code">Código:</label>
    <input type="text" id="form-code" name="code" required><br>
    <label for="form-stock">Stock:</label>
    <input type="number" id="form-stock" name="stock" min="0" required><br>
    <label for="form-category">Categoría:</label>
    <input type="text" id="form-category" name="category" required><br>
    <button type="submit">Agregar Producto</button>
  </form>
</div>

<div>
<label for="form-delete-id">ID del Producto a Eliminar:</label>
<input type="text" id="form-delete-id" name="deleteId">
<button type="button" id="delete-product">Eliminar Producto</button>
</div>

<div id="product-list">
  {{#each products}}
    <div class="product">
      <h2>{{title}}</h2>
      <p>{{id}}</p>
      <p>{{description}}</p>
      <p>Código: {{code}}</p>
      <p>Precio: {{price}}</p>
      <p>Stock: {{stock}}</p>
      <p>Categoría: {{category}}</p>
      <p>Thumbnail: {{thumbnail}}</p>
    </div>
  {{/each}}
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realTimeProducts.js"></script>
